._color-picker
    margin-left: 1rem
    position: relative

    &__swatch
        border-radius: 50%
        box-shadow: inset 0 0 4px 0 rgba(0, 0, 0, 0.11)
        display: block
        height: 40px
        width: 40px

        &:hover
            cursor: pointer

            & ~ ._color-picker__sample
                display: block

    &__sample
        bottom: 0
        display: none
        left: calc(50% - 20px)
        position: absolute
        transform: translateY(100%)
        z-index: 1

        &:hover
            display: block

        .github-picker
            width: 188px !important

._add-note
    align-items: center
    display: flex
    justify-content: space-around

    &__add
        background-color: #75ffff
        border-radius: 50%
        border: 0
        box-shadow: inset 0 0 4px 0 rgba(0, 0, 0, 0.11)
        color: #39adac
        font-size: 1.5rem
        height: 40px
        margin-right: 1rem
        outline: 0
        padding-top: 4px
        width: 40px

        &:focus
        &::-moz-focus-outer
            border: 0
            outline: none

        &:hover
            box-shadow: inset 0 0 8px 0 rgba(0, 0, 0, 0.11)
            cursor: pointer

        &:disabled
            filter: saturate(0)

            &:hover
                box-shadow: inset 0 0 4px 0 rgba(0, 0, 0, 0.11)
                cursor: not-allowed

    &__modifier
        -webkit-appearance: none
        background: transparent
        flex-grow: 1
        height: 40px
        margin: 10px 0

        &:focus
        &::-moz-focus-outer
            border: 0
            outline: none

        &::-webkit-slider-runnable-track
        &::-moz-range-track
            animate: 0.2s
            background: #75ffff
            border-radius: 10px
            box-shadow: inset 0 0 4px 0 rgba(0, 0, 0, 0.11)
            cursor: pointer
            height: 10px
            width: 100%

        &::-webkit-slider-thumb
        &::-moz-range-thumb
            background: #FFFFFF
            border-radius: 50%
            border: 0
            box-shadow: 2px 2px 8px 0 rgba(0, 0, 0, 0.09)
            cursor: pointer
            height: 30px
            width: 30px
