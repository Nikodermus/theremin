._note
    align-items: center
    background-color: #ffffff
    border-radius: 5px
    box-shadow: inset 0 0 4px 0 rgba(3, 128, 128, 0.51)
    display: flex
    height: 4.8vmin
    justify-content: center
    position: relative
    width: 4.8vmin

    &__wrapper
        display: grid
        grid-column-gap: 1vmin
        grid-row-gap: 1vmin
        grid-template-columns: repeat(7, 4.8vmin)

    &:hover &__remove
        display: flex

    &__tone
        font-size: 2rem

    &__remove
        align-items: center
        background-color: #d85050
        border-radius: 50%
        border: 0
        color: white
        display: none
        font-size: 1.1rem
        height: 22px
        justify-content: center
        padding-left: 1px
        padding-top: 3px
        position: absolute
        right: 0
        top: 0
        transform: translateX(30%) translateY(-30%) rotate(45deg)
        width: 22px

        &:hover
            display: flex
            cursor: pointer