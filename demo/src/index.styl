*
    box-sizing: border-box
    margin: 0
    padding: 0
    transition: 0.3s all ease

    &:hover
        transition: 0.3s all ease

body
    align-items: center
    display: flex
    height: 100vh
    justify-content: center
    overflow: hidden
    width: 100vw
    background-image: linear-gradient(to bottom, #eeffff, #d2fffc 87%, #b0fff9)

.th
    &__board
        background: gray
        height: 40vmin
        width: 40vmin
        border-radius: 10px
        box-shadow: inset 0 0 4px 0 rgba(175, 201, 201, 0.62)
        background-color: #bcffff
